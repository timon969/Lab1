<UserControl x:Class="KMA.ProgramingInCSharp.Lab1.Tools.Controls.TextBoxWithCaption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KMA.ProgramingInCSharp.Lab1.Tools.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300"
             x:Name="TextBoxWithCaption1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Name="TbCaption" Grid.Row="0" VerticalAlignment="Center" Margin="5,5,5,2" Text="Caption" FontSize="9" Foreground="Gray"></TextBlock>
        <TextBox Name="TbValue" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="25" Margin="5,0,5,5" Text="{Binding ElementName=TextBoxWithCaption1, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/> 
    </Grid>
</UserControl>
